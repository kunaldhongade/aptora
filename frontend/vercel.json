{
    "buildCommand": "pnpm install --ignore-scripts && pnpm build",
    "outputDirectory": "dist",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://aptora-production-d723.up.railway.app/api/$1"
        }
    ],
    "env": {
        "VITE_API_BASE_URL": "https://aptora-production-d723.up.railway.app/api"
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}